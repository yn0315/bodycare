    <section>
        <!-- 왼쪽 메뉴 -->
        <div id="menu" class="">
            <ul class="close_menu_list">
                <li><a id="open" onclick="open_menu_event()" class="" href="#"><img id="open" src="/img/right.png"
                            alter="열기"></a></li>
                <li><a id="menu_icon" class="invisible" href="/"><img src="/img/home_button.png" alter="메인"></a></li>
                <li><a id="menu_icon" class="invisible" href="/camera"><img src="/img/camera.png"
                            alter="촬영세팅"></a></li>
                <li><a id="menu_icon" class="invisible" href="/shoot"><img src="/img/shoot.png" alter="촬영"></a></li>
                <li><a id="menu_icon" class="invisible" href="/record"><img src="/img/album.png" alter="앨범"></a></li>
                <li><a id="menu_icon" onclick="close_menu_event()" class="invisible" href="#"><img src="/img/left.png"
                            alter="닫기"></a></li>
            </ul>
        </div>

        <!-- 기록부분 -->
        <div class="record_section">
            <div id="record_div" class="">
                <div id="inner_record_div" class="">
                    <div id="record_one_div">
                        <a id="before_frame"><img src="/img/back_black.png"></a>
                    </div>
                    <div id="record_two_div">
                        <input id="record_input" type="text" placeholder="검색어를 입력하세요."><img id="searchPic"
                            src="/img/search.png">
                    </div>
                    <div id="record_three_div">
                        <button id="asc_desc"><img src="/img/sort.png"></button>
                    </div>
                </div>
            </div>

            <div id="outer_record_box" class="invisible">
                <div id="inner_record_box">

                </div>
            </div>
            <div id="album_button_set" class="invisible">
                <div id="album_inner_button_set">
                    <button id="album_record_search">기록 조회</button>
                </div>

            </div>


            <!-- 결과출력 -->
            <div id="result_chart_section" class="invisible">
                <div id="outer_result_div">
                    <div id="inner_result_div">
                        <div class="barchart_background"></div>
                        <div id="barchart_values"></div>
                    </div>
                </div>

            </div>


        </div>


        <script>
            //키업이벤트 시킬 요소 가져옴
