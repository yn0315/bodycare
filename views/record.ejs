            const $input_p = document.createElement("p");

            $input_p.id = "record_list";

            function valueInput(){
                <% if(data) { %>

                $arr.push({ name: '<%=data.name%>', age: '<%=data.age%>', gender: '<%=data.gender%>', tel: '<%=data.tel%>', height: '<%=data.height%>', weight: '<%=data.weight%>' });

                console.log($arr);
                <% } %>
            }

            valueInput();


        </script>



